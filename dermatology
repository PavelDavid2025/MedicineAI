<script>
    // Chart.js - Gráfico de Anillo (Tecnologías)
    const techCtx = document.getElementById('techDoughnutChart').getContext('2d');
    new Chart(techCtx, {
        type: 'doughnut',
        data: {
            labels: ['Redes Neuronales Convolucionales (CNN)', 'Procesamiento de Lenguaje Natural (NLP)', 'Otro Machine Learning'],
            datasets: [{
                label: 'Distribución de Tecnologías IA',
                data: [75, 15, 10],
                backgroundColor: ['#0a9396', '#94d2bd', '#ee9b00'],
                borderColor: '#fff',
                borderWidth: 2
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { position: 'top' },
                title: { display: true, text: 'Distribución de Tecnologías IA en Dermatología' }
            }
        }
    });

    // Chart.js - Gráfico de Barras (Precisión)
    const accuracyCtx = document.getElementById('accuracyBarChart').getContext('2d');
    new Chart(accuracyCtx, {
        type: 'bar',
        data: {
            labels: ['Sensibilidad (Detectar Cáncer)', 'Especificidad (Descartar Sanos)'],
            datasets: [
                {
                    label: 'Modelo IA',
                    data: [95, 90],
                    backgroundColor: '#0a9396',
                    borderColor: '#005f73',
                    borderWidth: 1
                },
                {
                    label: 'Dermatólogos (Promedio)',
                    data: [88, 93],
                    backgroundColor: '#94d2bd',
                    borderColor: '#0a9396',
                    borderWidth: 1
                }
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    max: 100,
                    title: { display: true, text: 'Precisión (%)' }
                }
            },
            plugins: {
                legend: { position: 'top' },
                title: { display: true, text: 'Comparativa de Precisión Diagnóstica' }
            }
        }
    });

    // Chart.js - Gráfico de Líneas (Tendencias)
    const trendsCtx = document.getElementById('trendsLineChart').getContext('2d');
    new Chart(trendsCtx, {
        type: 'line',
        data: {
            labels: ['2020', '2021', '2022', '2023', '2024', '2025 (est.)'],
            datasets: [{
                label: 'Publicaciones Científicas sobre IA en Dermatología',
                data: [85, 150, 280, 450, 710, 1100],
                fill: true,
                backgroundColor: 'rgba(148, 210, 189, 0.2)',
                borderColor: '#0a9396',
                tension: 0.3
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { display: false },
                title: { display: true, text: 'Crecimiento Anual de la Investigación' }
            },
             scales: {
                y: {
                    title: { display: true, text: 'Nº de Publicaciones' }
                }
            }
        }
    });
</script>

